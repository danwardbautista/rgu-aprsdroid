<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTheme" parent="@android:style/Theme.Holo">
        <!-- Text Colors -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>

        <!-- Action Bar -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>

        <!-- UI Elements -->
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="CustomButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="CustomEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="CustomListView" parent="@android:style/Widget.Holo.ListView">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MapViewTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/Map.ActionBar</item>
    </style>

    <style name="Map.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#a0000000</item>
    </style>
</resources>

